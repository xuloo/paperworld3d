<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	
	<bean id="paperworld.service" class="com.paperworld.core.PaperworldService">
		<property name="application">
			<ref bean="web.handler"/>
		</property> 
		<property name="zones">
			<map>
				<entry key="spacezone"><ref bean="spacezone"/></entry>
			</map>
		</property>
	</bean>
		
	<bean id="spacezone" class="com.paperworld.zone.Zone">
		<property name="name" value="spacezone"/>
		<property name="persistent" value="false"/>
		<property name="players">
			<map>
				<entry key="A"><ref bean="enemy"/></entry>
			</map>
		</property>
	</bean>
	
	<bean id="spacecraft.behaviour" 
		class="com.paperworld.avatar.behaviour.SpacecraftBehaviour"
		singleton="false" />
		
	<bean id="starfighter" 
		class="com.paperworld.games.objects.StarFighter"
		singleton="false">
		<property name="behaviour">
			<ref bean="spacecraft.behaviour"/>
		</property>
	</bean>
	
	<bean id="player" class="com.paperworld.core.player.Player" singleton="false">
		<property name="avatar">
			<ref bean="starfighter"/>
		</property>
	</bean>
	
	<bean id="enemy" class="com.paperworld.core.player.Player" singleton="false">
		<property name="id" value="A"/>
		<property name="avatar">
			<ref bean="starfighter"/>
		</property>
	</bean>
		
</beans>